server {
	listen					8005
	host					127.0.0.1
	server_name				default_server
    error_page              404 error.html
    client_max_body_size    5

    location / {
		methods					GET
		default_file			index.html
		autoindex				on
		cgi         			.bla ./ubuntu_cgi_tester
	}

	location /redirect {
	    redirection             www.example.com
	    root                    ./
	    default_file            default.html
	    upload_files_path       ./upload/
	}

    location /put_test {
		methods					PUT
		default_file			index.html
		autoindex				on
		cgi         			.bla ./ubuntu_cgi_tester
	}

    location /post_body {
		methods					POST
		autoindex				off
		default_file			test.bla
		cgi         			.bla ./ubuntu_cgi_tester
	}

	location /directory {
		root					./YoupiBanane
		methods					GET POST
		default_file			youpi.bad_extension
		autoindex				off
		cgi         			.bla ./ubuntu_cgi_tester
    }
}